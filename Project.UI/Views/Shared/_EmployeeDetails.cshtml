<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingSystem.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <header class="header">
        <nav>
            <a asp-controller="Employees" asp-action="Index">

                <i class="fas fa-bank fa-5x icon-bank"></i>
            </a>
            <div class="nav-link">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="Index">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="RegisterView">
                            <i class="fas fa-user-plus"></i>  Register
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="LoginView">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="TransactionDetail">
                            <i class="fas fa-info-circle"></i> About Us
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="Privacy">
                            <i class="fas fa-phone"></i> Contact
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main>
            @RenderBody()  <!-- THIS LINE IS CRITICAL -->
        </main>
    </header>
    <div class="service-category">
       <h1>Services we Offer</h1>
       <p>We provide a wide range of banking services to meet your financial needs.</p>
    </div>


    <div class="row">
        <div class="col-md-4 service-box">
            
            <h3>Account Management</h3>
            <p>Open and manage your bank accounts with ease.</p>
        </div>
        <div class="col-md-4 service-box">
           
            <h3>Funds Transfer</h3>
            <p>Transfer funds securely between accounts.</p>
        </div>
        <div class="col-md-4 service-box">
            
            <h3>Investment Services</h3>
            <p>Grow your wealth with our investment options.</p>
        </div>
            


    </div>

    <section class="Branches">
        <h1>Our Branches</h1>
        <p>Visit our conveniently located branches across the region for personalized banking services.</p>

        <div class="row">
            <!-- Branch 1 -->
            <div class="campus-col">
                <img src="~/images/hendra-jn-0GFcIy9_MJk-unsplash.jpg" alt="Main Downtown Branch">
                <div class="layer">
                    <h3>Downtown Branch</h3>
                </div>
            </div>

            <!-- Branch 2 -->
            <div class="campus-col">
                <img src="~/images/william-krause-B5Jaqd_f8_E-unsplash.jpg" alt="Westside Financial Center">
                <div class="layer">
                    <h3>Westside Center</h3>
                </div>
            </div>

            <!-- Branch 3 -->
            <div class="campus-col">
                <img src="~/images/precious-madubuike-6-24YecIwRY-unsplash.jpg" alt="Eastgate Banking Hub">
                <div class="layer">
                    <h3>Eastgate Hub</h3>
                </div>
            </div>
        </div>
    </section>





    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Project.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
