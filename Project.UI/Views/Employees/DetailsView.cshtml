@model List<Project.Domain.Entities.PersonalDetail>
@{
    ViewData["Title"] = "Personal Details";

    Layout = "~/Views/Shared/_LayoutLandPage.cshtml";

}
<div class="container mt-4">
    <!-- Header with Add button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Personal Details</h2>
        <a asp-action="Add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Person
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <h4>No Personal Details Found</h4>
            <p>There are no personal details to display.</p>
            <a asp-action="Add" class="btn btn-primary">Add First Person</a>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var person in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">@person.FirstName @person.LastName</h5>
                                <span class="badge bg-light text-dark">@person.AccountNumber</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Fixed property names to match your ViewModel -->
                            <div class="mb-3">
                                <strong>Name:</strong> @person.FirstName
                            </div>
                            <div class="mb-3">
                                <strong>Surname:</strong> @person.LastName
                            </div>
                            <div class="mb-3">
                                <strong>Date of Birth:</strong> @person.DateOfBirth.ToString("MM/dd/yyyy")
                            </div>
                            <div class="mb-3">
                                <strong>ID Number:</strong> @person.IDNumber <!-- Fixed: ID_Number to IDNumber -->
                            </div>
                            <div class="mb-3">
                                <strong>Account Number:</strong>
                                <span class="badge bg-info text-dark">@person.AccountNumber</span> <!-- Fixed: Account_number to AccountNumber -->
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@person.Code"
                                   class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@person.Code"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@person.Code"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>